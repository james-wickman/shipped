<div class="ship">
	<div class="col s12 m6 l4">
		<div class="card blue-grey darken-1 modal<%= ship.id %>">
			<div class="card-content white-text">
				 <br>
				<a class="waves-effect waves-light z-depth-5 ship_buttons" href="#modal<%=ship.id%>">
					Name: <%= ship.name %> <br>
					Possible Containers: <%= ship.containers_possible %> <br>
					Location: <%= ship.location %> 
					<%= link_to "Delete", ship_path(ship), remote: true, method: :delete, data: { confirm: 'Are you sure?'}, class: "delete_ship" %>
				</a>
			</div>
			
		</div>
	</div>
</div>
<!-- Modal Structure -->
<div id="modal<%=ship.id%>" class="modal">
	<div class="modal-content">
		<h4>Name: <%= ship.name %> <br>
			Possible Containers: <%= ship.containers_possible %> <br>
			Location: <%= ship.location %> <br></h4>
			<%= image_tag ship.boat_photo.url(:medium) %>
		<div class="modal-footer">
  			<%= link_to "Edit Ship", edit_ship_path(ship), class:" modal-action modal-close waves-effect waves-green btn-flat" %>
		</div>
		<p>
			<h2>Current Jobs</h2>
			<% ship.jobs.each do |job| %>
				Origin: <%= job.origin %><br>
				Destination: <%= job.destination %><br>
				Containers Left To Move: <%= job.containers_needed %><br>
				Pay: <%= job.cost %><br>
				Description: <%= job.description %><br>
				<hr>
			<% end %>
			<hr>
			<%= render 'jobs/showing_jobs', show: true, ship: ship %>
		</p>
	</div>
</div>
 
